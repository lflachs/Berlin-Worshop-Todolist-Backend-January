// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Todolist {
    id    Int    @id @default(autoincrement())
    title String
    task  Task[]
}

model Task {
    id         Int       @id @default(autoincrement())
    title      String
    done       Boolean
    todolist   Todolist? @relation(fields: [todolistId], references: [id])
    todolistId Int?
}

model Book {
    id      Int      @id @default(autoincrement())
    title   String
    cover   String?
    authors Author[]
}

model Author {
    id        Int    @id @default(autoincrement())
    email     String @unique
    firstName String
    lastName  String
    books     Book[]
}

generator client {
    provider = "prisma-client-js"
}
